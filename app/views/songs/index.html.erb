

  <div class="row">

    <div class="col-2 sidebar">
      <div class="indexSearch">

        <%= form_tag songs_path, method: :get do %>
        <%= image_tag "https://res.cloudinary.com/dck5uyfgr/image/upload/v1615460756/untitled_13_vljnyl.svg", class: "magnifyicon" %>
          <%= text_field_tag :query, params[:query], class: "form-control", id: "searchBar", placeholder: "Search da songs"%>
          <%# submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>


     <div class="col-10 songCol">

      <table class="table table-dark table-striped">
        <thead>
          <tr>

            <th scope="col"></th>

            <th scope="col">Name</th>

            <th scope="col">Uploader</th>

            <th scope="col">Genres</th>

            <th scope="col">Price</th>

            <th scope="col"></th>

          </tr>
        </thead>

        <tbody>


          <% @songs.each do |song| %>

          <tr class=indextableRow>

            <!-- <th scope="row">1</th> -->
               <td>

                <% if song.user.photo.key.nil? == false %>
                  <%= cl_image_tag song.user.photo.key, class: "songListImage"%>
                <% else %>
                  <%= image_tag "https://res.cloudinary.com/dck5uyfgr/image/upload/v1615276848/SSlogoDarkTrans_v7auwe.svg", class: "songListImage" %>
                <% end %>
              <%#cl_image_tag(song.user.photo.key) if song.user.photo.attached? %>

              <% case song.user.cred %>
                <% when 0..10 %>
                  <%= cl_image_tag "dqsjezd716s3vqpysp1u", class: "rate-flames" %>  <!--min cred -->
                <% when 10..100 %>
                  <%=  cl_image_tag "bi7cunh0wb8e37eonpuh", class: "rate-flames" %>  <!--2nd lvl cred  -->
                <% when 100..500 %>
                  <%=  cl_image_tag "nwrmwv4pe75urersjexk", class: "rate-flames" %>  <!--3rd lvl cred  -->
                <% when 500..1000 %>
                  <%=  cl_image_tag "lxglqrvux6hmfuigbwns", class: "rate-flames" %>  <!--4th lvl cred  -->
                <% when 1000..100000 %>
                    <%=  cl_image_tag "ugwqufxkpjkg1gsbfc5g", class: "rate-flames" %>  <!--5th lvl cred  -->

      <% end %>


              </td>


              <!-- <th scope="row"></th> -->
              <td>
                <p> <%= song.name  %>  </p>
              </td>

              <!-- <th scope="row"></th> -->
              <td>
                <p><%= song.user.nickname%></p>
              </td>


              <!-- <th scope="row"></th> -->
              <td>
               <p> <%= song.genre.genre %></p>
              </td>

            <!-- <th scope="row"></th> -->
              <td>
              <% if song.dollar == true  %>
                <p>$<%=song.price%>
              <%  else  %>
                <p><%=song.price%>%</p>
              <% end %>
            </td>

            <!-- <th scope="row"></th> -->
            <td>
              <% if song.audio.key.nil? == false  %>
                <%= render "songs/video_control", song: song %>
              <% else %>
                <p>no audio</p>
              <% end %>
            </td>


            <!-- End links on rows -->



            <td class="tableLink">
              <% if song.dollar == false %>
                <%= link_to "enquire",  new_song_booking_path(song), id: "enquire" %>
              <% end %>

              <% if song.dollar == true %>
                <%= link_to line_items_path(:song_id => song.id), method: :post do %>
                <%= image_tag "https://res.cloudinary.com/dck5uyfgr/image/upload/v1615423829/001-cart_cfrbrc.svg", width: 25, height: 25, alt: 'a face that is unnervingly happy'%>
                <% end %>
              <% end  %>

            </td>



            <td class="tableLink">
              <%= link_to "details", song_path(song.id), class: "viewSonglink" %>
            </td>

            <td class="tableLink">
            <% if current_user.favorited?(song) %>
              <% favorite = current_user.all_favorites.where(favoritable_id: song.id, favoritable_type: 'Song') %>
              <%= link_to "un-fav", unfavorite_song_path(song), method: :delete, class: "favButton" %>
            <% else %>
              <%= link_to "fav", favorite_song_path(song), method: :post, class: "favButton" %>
            <% end %>

            </td>

            </tr>

            <% end %>


          </tbody>
        </table>
      </div>





      <!-- </div> -->



  </div>


